<h4><a href="/">Home</a></h4>
<hr>
<h1>Add Animal</h1>

<form action="/animal/new" method="post">
  <button type="submit" class="btn btn-primary">Add Animal</button>
  <hr>
  <label for="name">Animal Species</label><br>
  <input type="text" name="name" required>
  <label for="endangered">Check if Endangered</label>
  <input type="checkbox" name="endangered">
  <hr>
  <div class="reveal-if-active">
    <h3>Additional information about endangered animal:</h3>
    <label for="health">Appearance of Health</label>
    <select class="form-control" name="health">
      <option>$Poor</option>
      <option>$Ok</option>
      <option>$Good</option>
    </select>
    <br>
    <label for="age">Approximate Age</label>
    <select class="form-control" name="age">
      <option>$Newborn</option>
      <option>$Young</option>
      <option>$Adult</option>
    </select>
  </div>
</form>
